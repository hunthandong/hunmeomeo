#include"stdio.h"
 int main (){
 	int b,c,a=0;
 	float t;
 	scanf ("%d %d",&c,&b);
 	a=b-c;
 	if(a<=100)
 	{
 		t =a*1000;
 	}
 	if (a>=101&&a<=150)
 	{
 		t=100*1000+(a-100)*1200;
 	}
 	if (a>=151 &&a<=200)
 	{
 		t=100*1000+50*1200+(a-150)*2000;
 	}
 	if(a>=201)
 	{
 		t=100*1000+50*1200+50*2000+(a-200)*2500;
 	}
 	printf("%g",t);
 	return 0;
 	
 }
